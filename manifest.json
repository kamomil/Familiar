{
  "name": "Familiar",
  "short_name": "Familiar",
  "version": "0.0.1",
  "description": "Helps with improving vocabulary by saving all words you ever ancountered",
  "icons": { "128": "icon128.png",
              "48": "icon48.png",
              "32": "icon32.png",
              "16": "icon16.png"
            },
  "background": { "scripts": ["background.js", "localstorage.js", "jquery-3.3.1.js"] },
  "permissions": [
      "storage",
      "http://*/*",
      "https://*/*",
      "file:///home/*",
      "contextMenus",
      "tabs"
  ],

  "browser_action": {
      "default_name": "F",
      "default_icon": "icon128.png"
  },
  "manifest_version": 2
}
